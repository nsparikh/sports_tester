<h2 class="center">Poll Question <%= poll.id %></h2>
<%= link_to "delete", poll, method: :delete, data: { confirm: "You sure?" } %>

<div class="team-container">
	<h2 class="team-header center"><%= poll.teamAName %></h2>
	<ul class="team-stats-list">
		<li>Overall season record: <%= poll.teamAWins %> - <%= poll.teamALosses %></li>
		<li>Total points for: <%= poll.teamAPointsFor %></li>
		<li>Total points against: <%= poll.teamAPointsAgainst %></li>
		<li>Home or away?: <%= poll.teamALocation %></li>
	</ul>
</div>

